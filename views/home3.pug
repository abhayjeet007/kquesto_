            .modal-body
                input#groupName.form-control(type='text' ,placeholder="Group Name..", style="height:50px")
                input#groupDescription.form-control(type='description',placeholder=" Group Description.....", style="height:150px;")
                .loadingSpinnerContainer
                    img(src="/images/loadingSpinner.gif", alt="Loading spinner" , style="height:50px;widht:50px;")
            .modal-footer
               button#createGroupButton.btn-primary(type='button') Create Group 
               button.btn-secondary(type='button', data-dismiss='modal') Close
