   .modal#postmodal(tabindex='-1', role='dialog')
      .modal-dialog(role='document')
         .modal-content
            .modal-header
               h5.modal-title Post
               button.close(type='button', data-dismiss='modal', aria-label='Close')
                  span(aria-hidden='true') &times;
            .modal-body
               
                textarea#postContent.form-control(type='text' ,placeholder="Type Something.....", style="height:150px")
                .loadingSpinnerContainer
                    img(src="/images/loadingSpinner.gif", alt="Loading spinner" , style="height:50px;widht:50px;")
            .modal-footer(style="display:flex;flex-direction:row;")
               button#shareTextPostmodal.btn-primary(type='button') Post 
               button.btn-secondary(type='button', data-dismiss='modal' ,style="margin-left:20px;") Close
   .modal#videoUploadmodal(tabindex='-1', role='dialog')
      .modal-dialog(role='document')
         .modal-content
            .modal-header
               h5.modal-title Post Video To Community
               button.close(type='button', data-dismiss='modal', aria-label='Close')
                  span(aria-hidden='true') &times;
            .modal-body
                form#videouploadform(action='/api/upload', enctype='multipart/form-data', method='post')
                     
                     div File: 
                          
                        input(type='file', name='someExpressFiles', multiple='multiple')
                     input(type='submit', value='Upload',style="margin-top:20px;")
                .loadingSpinnerContainer
                    img(src="/images/loadingSpinner.gif", alt="Loading spinner" , style="height:50px;widht:50px;")
                
   .modal#photoUploadmodal(tabindex='-1', role='dialog')
      .modal-dialog(role='document')
         .modal-content
            .modal-header
               h5.modal-title Post Photo To community
               button.close(type='button', data-dismiss='modal', aria-label='Close')
                  span(aria-hidden='true') &times;
            .modal-body
                input#caption.form-control(type='text' ,placeholder="Caption..", style="height:50px;border-bottom:20px;")
                input#imagepost.form-control(type='file')
                .loadingSpinnerContainer
                    img(src="/images/loadingSpinner.gif", alt="Loading spinner" , style="height:50px;widht:50px;")
                .imagePreviewContainer
                   image#imagePreview(style="width:400px;height:400px;")
            .modal-footer(style="display:flex;flex-direction:row;")
               button#imageUploadButton.btn.btn-primary(type='button' ,style="display:flex;flex-direction:row;justify-content:center;color:white;") Post
               button.btn.btn-secondary(type='button', data-dismiss='modal',style="display:flex;flex-direction:row;justify-content:center;color:#aaa;") Close
   .modal#createGroupmodal(tabindex='-1', role='dialog')
